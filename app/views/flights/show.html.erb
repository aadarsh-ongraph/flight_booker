 
<% if @flights.any? %>
  
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>Flight No.</th>
          <th>Departure Airport</th>
          <th>Arrival Airport</th>
          <th>Date</th>
          <th>Departs at</th>
          <th>Flight Duration</th>
            <th>Book your Ticket<th>
          
         
        </tr>
      </thead>
      <tbody>
        <% @flights.each do |flight| %>
          <tr>
            <td><%= flight.id %></td>
            <td><%= flight.departure_airport.code %> </td>
            <td><%= flight.arrival_airport.code %></td>
            <td><%= flight.start_datetime.strftime('%F') %></td>
            <td><%= flight.start_datetimestrftime('%H:%M') %></td>
            <td><%= flight.duration %> minutes</td>
          <%# <td><%= link_to "Book",new_booking_path(flight_id: flight.id,seats:params[:seats])%></td> %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>Sorry there are no flights available for your search. ðŸ˜ž</p>
  <% end %>